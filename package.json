{
  "name": "notes-middleware",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && tsc --noEmit",
    "icons": "tsx scripts/generate-icons.ts",
    "check-types": "tsc --noEmit",
    "pre-deploy": "npm run lint && npm run check-types"
  },
  "dependencies": {
    "@notionhq/client": "^5.1.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.4",
    "@tailwindcss/typography": "^0.5.18",
    "google-auth-library": "^10.3.0",
    "googleapis": "^160.0.0",
    "lodash": "^4.17.21",
    "next": "14.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.14",
    "openai": "^5.22.0",
    "png-to-ico": "^3.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "resend": "^3.3.0",
    "sharp": "^0.34.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.17",
    "@types/nodemailer": "^7.0.1",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  }
}
